<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts
Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="authenticationInterceptor" class="com.example.AuthenticationInterceptor" />
            <interceptor-stack name="authStack">
                <interceptor-ref name="authenticationInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="authStack" />

        <action name="login" class="com.example.AuthAction">
            <interceptor-ref name="defaultStack" />
            <param name="credentialHolder.username">${credentialHolder.username}</param>
            <param name="credentialHolder.password">${credentialHolder.password}</param>
            <result name="success">welcome.jsp</result>
            <result name="error">login.jsp</result>
        </action>

        <action name="secureAction" class="com.example.SecureAction">
            <result>securePage.jsp</result>
        </action>
    </package>
</struts>